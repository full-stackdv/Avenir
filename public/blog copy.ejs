<%# views/public/blog.ejs %>
<% layout('../layouts/public_layout') -%>
<% title = 'AvenirCon Blog - Insights & News' %>
<%# pageScripts = ['/js/blog_scripts.js'] %>

<header class="blog-header text-center">
    <div class="container py-4">
        <h1 class="display-4">AvenirCon Blog</h1>
        <p class="lead">Insights, news, and updates from the world of construction and project management.</p>
    </div>
</header>

<div class="container mt-4 mb-5">
    <div class="row">
        <!-- Main Blog Content Area -->
        <div class="col-lg-9 col-md-8">
            <%# Search Bar (Optional, implement server-side search controller if used) %>
            <form action="/blog" method="GET" class="mb-4">
                <div class="input-group input-group-lg">
                    <input type="text" name="search" class="form-control" placeholder="Search articles..." aria-label="Search articles" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                    <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>

            <% if (typeof posts !== 'undefined' && posts.length > 0) { %>
            <div class="row row-cols-1 row-cols-md-2 g-4"> <%# Can be 1 column too, adjust row-cols-md-1 %>
                <% posts.forEach(function(post) { %>
                <div class="col">
                    <div class="card h-100 shadow-sm hover-shadow blog-post-card-item">
                        <% if (post.feature_image_path) { %>
                            <a href="/blog/<%= post.slug %>">
                                <img src="/uploads/feature_images/<%= post.feature_image_path.split('/').pop() %>" class="card-img-top" alt="<%= post.title %>" style="height: 220px; object-fit: cover;">
                            </a>
                        <% } else { %>
                            <a href="/blog/<%= post.slug %>">
                                 <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 220px;">
                                    <i class="fas fa-image fa-4x text-light-emphasis"></i>
                                </div>
                            </a>
                        <% } %>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title mb-1"><a href="/blog/<%= post.slug %>" class="text-decoration-none text-dark stretched-link"><%= post.title %></a></h5>
                            <p class="card-text text-muted small mb-2">
                                <i class="fas fa-user-edit fa-xs me-1"></i> By <%= post.author_name || 'AvenirCon Team' %>
                                <% if(post.published_at) { %>
                                    <span class="mx-1">â€¢</span><i class="fas fa-calendar-alt fa-xs me-1"></i> <%= new Date(post.published_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                <% } %>
                            </p>
                            <% if (post.summary) { %>
                                <p class="card-text flex-grow-1 small"><%= post.summary.substring(0, 150) %><% if(post.summary.length > 150) { %>...<% } %></p>
                            <% } else if (post.content) { %>
                                 <p class="card-text flex-grow-1 small"><%- post.content.replace(/<[^>]+>/g, '').substring(0, 150) %><% if(post.content.replace(/<[^>]+>/g, '').length > 150) { %>...<% } %></p>
                            <% } %>
                        </div>
                         <div class="card-footer bg-transparent border-top-0 pt-0">
                            <a href="/blog/<%= post.slug %>" class="btn btn-sm btn-outline-primary">Read More <i class="fas fa-arrow-right fa-xs ms-1"></i></a>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>

            <%# Pagination (Implement server-side pagination logic) %>
            <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                <nav aria-label="Blog navigation" class="mt-5">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item"><a class="page-link" href="/blog?page=<%= currentPage - 1 %><%= typeof searchQuery !== 'undefined' && searchQuery ? '&search=' + searchQuery : '' %>">Previous</a></li>
                        <% } else { %>
                            <li class="page-item disabled"><span class="page-link">Previous</span></li>
                        <% } %>
                
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <% if (i === currentPage) { %>
                                <li class="page-item active" aria-current="page"><span class="page-link"><%= i %></span></li>
                            <% } else if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                                <li class="page-item"><a class="page-link" href="/blog?page=<%= i %><%= typeof searchQuery !== 'undefined' && searchQuery ? '&search=' + searchQuery : '' %>"><%= i %></a></li>
                            <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                                 <li class="page-item disabled"><span class="page-link">...</span></li>
                            <% } %>
                        <% } %>
                
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item"><a class="page-link" href="/blog?page=<%= currentPage + 1 %><%= typeof searchQuery !== 'undefined' && searchQuery ? '&search=' + searchQuery : '' %>">Next</a></li>
                        <% } else { %>
                            <li class="page-item disabled"><span class="page-link">Next</span></li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>

            <% } else { %>
            <div class="alert alert-info text-center" role="alert">
                <h4 class="alert-heading">No Blog Posts Found!</h4>
                <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                    <p>Your search for "<%= searchQuery %>" did not match any articles. Try different keywords or <a href="/blog" class="alert-link">view all posts</a>.</p>
                <% } else { %>
                    <p>We're working on bringing you insightful content. Please check back soon.</p>
                <% } %>
            </div>
            <% } %>
        </div>

        <!-- Sidebar Area -->
        <div class="col-lg-3 col-md-4">
            <%- include('../partials/_aside_sidebar', { recentPosts: (typeof recentPosts !== 'undefined' ? recentPosts : []), categories: (typeof categories !== 'undefined' ? categories : []) }) %>
        </div>
    </div>
</div>










