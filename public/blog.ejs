<% if (typeof posts !== 'undefined' && posts.length > 0) { %>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% posts.forEach(function(post) { %>
    <div class="col">
        <div class="card h-100 shadow-sm hover-shadow">
            <% if (post.feature_image_path) { %>
                <a href="/blog/<%= post.slug %>">
                    <img src="/uploads/feature_images/<%= post.feature_image_path.split('/').pop() %>" class="card-img-top" alt="<%= post.title %>" style="height: 200px; object-fit: cover;">
                </a>
            <% } else { %>
                <a href="/blog/<%= post.slug %>">
                     <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                        <i class="fas fa-image fa-3x text-light"></i>
                    </div>
                </a>
            <% } %>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title"><a href="/blog/<%= post.slug %>" class="text-decoration-none text-dark stretched-link"><%= post.title %></a></h5>
                <p class="card-text text-muted small mb-2">
                    By <%= post.author_name || 'Avenircon Team' %>
                    <% if(post.published_at) { %>
                        on <%= new Date(post.published_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                    <% } %>
                </p>
                <% if (post.summary) { %>
                    <p class="card-text flex-grow-1"><%= post.summary.substring(0, 120) %><% if(post.summary.length > 120) { %>...<% } %></p>
                <% } else if (post.content) { %>
                     <p class="card-text flex-grow-1"><%- post.content.replace(/<[^>]+>/g, '').substring(0, 120) %><% if(post.content.replace(/<[^>]+>/g, '').length > 120) { %>...<% } %></p>
                <% } %>
             </div>
             <div class="card-footer bg-transparent border-top-0">
                <small class="text-muted">
                    <a href="/blog/<%= post.slug %>" class="btn btn-sm btn-outline-primary">Read More <i class="fas fa-arrow-right fa-xs"></i></a>
                </small>
            </div>
        </div>
    </div>
    <% }); %>
</div>
