
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= pageTitle %></h1>
    <a href="/admin/project-templates/create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> Create New System Template
    </a>
 </div>

    <%- include('../../partials/_messages') %>

<% if (templates && templates.length > 0) { %>
    <div class="card">
        <div class="card-header">
            System Project Templates
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Created By</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% templates.forEach(template => { %>
                            <tr>
                                <td><%= template.name %></td>
                                <td><%= template.description ? template.description.substring(0, 100) + (template.description.length > 100 ? '...' : '') : 'N/A' %></td>
                                <td><%= template.creator_username || (template.created_by_id ? 'User ID: ' + template.created_by_id : 'System') %></td>
                                <td><%= new Date(template.created_at).toLocaleDateString() %></td>
                                <td>
                                    <a href="/admin/project-templates/<%= template.id %>/edit" class="btn btn-sm btn-info me-1" title="Edit Template">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                      <!-- NEW LINK/BUTTON for Edit Structure -->
                                       <a href="/admin/project-templates/<%= template.id %>/structure" class="btn btn-sm btn-info">Manage Tasks</a>

                                    <%# Future: Link to an interface to manage tasks for this system template %>
                                     <a href="/admin/project-templates/<%= template.id %>/tasks" class="btn btn-sm btn-secondary me-1" title="Manage Template Tasks">
                                        <i class="fas fa-tasks"></i>
                                    </a> 
                                    <form action="/admin/project-templates/<%= template.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this system template and all its tasks? This cannot be undone.');">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete Template">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                             
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<% } else { %>
    <div class="alert alert-info">
        No system project templates found. <a href="/admin/project-templates/create">Create one now</a>.
    </div>
<% } %>
 