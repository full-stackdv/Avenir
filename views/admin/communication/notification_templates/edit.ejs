<%# views/admin/communication/notification_templates/edit_form.ejs %>
<div class="container-fluid mt-4">
    <%- include('../../../partials/_messages') %>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">
                <i class="fas fa-edit mr-2"></i>
                Edit Template: <code class="text-light"><%= template.template_key %></code>
            </h4>
        </div>
        <form action="/admin/communication/notification-templates/<%= template.template_key %>/edit" method="POST">
            <div class="card-body">
                <p class="lead"><%= template.description %></p>
                <hr>

                <% if (!template.is_customizable) { %>
                    <div class="alert alert-warning" role="alert">
                        <strong>Note:</strong> This template is marked as non-customizable. Changes may not be saved or could be overwritten by system defaults.
                    </div>
                <% } %>

                <div class="form-group">
                    <label for="subject_template">Subject Template <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="subject_template" name="subject_template" value="<%= template.subject_template %>" <%= !template.is_customizable ? 'readonly' : '' %> required>
                </div>

                <div class="form-group">
                    <label for="body_html_template">Body HTML Template <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="body_html_template" name="body_html_template" rows="10" <%= !template.is_customizable ? 'readonly' : '' %> required><%= template.body_html_template %></textarea>
                    <small class="form-text text-muted">HTML is allowed. Use placeholders for dynamic content.</small>
                </div>

                <div class="form-group">
                    <label for="body_text_template">Body Text Template (Plain Text Version) <span class="text-danger">*</span></label>
                    <textarea class="form-control" id="body_text_template" name="body_text_template" rows="10" <%= !template.is_customizable ? 'readonly' : '' %> required><%= template.body_text_template %></textarea>
                    <small class="form-text text-muted">Plain text version for email clients that do not support HTML.</small>
                </div>

                <% if (template.parsed_placeholders && template.parsed_placeholders.length > 0) { %>
                    <div class="form-group">
                        <label>Available Placeholders for this template:</label>
                        <div>
                            <% template.parsed_placeholders.forEach(placeholder => { %>
                                <span class="badge badge-secondary mr-1 mb-1 p-2"><code><%= placeholder %></code></span>
                            <% }); %>
                             <span class="badge badge-secondary mr-1 mb-1 p-2"><code>{{siteName}}</code></span> <!-- Common placeholder -->
                        </div>
                        <small class="form-text text-muted">These placeholders will be replaced with actual data when the email is sent.</small>
                    </div>
                <% } else { %>
                    <div class="form-group">
                        <label>Available Placeholders for this template:</label>
                        <div>
                            <span class="badge badge-secondary mr-1 mb-1 p-2"><code>{{siteName}}</code></span> <!-- Common placeholder -->
                             <span class="badge badge-secondary mr-1 mb-1 p-2"><code>{{recipientEmail}}</code></span>
                        </div>
                         <small class="form-text text-muted">General placeholders. Specific placeholders might not be defined for this template key.</small>
                    </div>
                <% } %>
            </div>
            <div class="card-footer text-right">
                <a href="/admin/communication/notification-templates" class="btn btn-secondary">Cancel</a>
                <% if (template.is_customizable) { %>
                    <!-- Optional: Reset to Default button -->
                    <!--
                    <form action="/admin/communication/notification-templates/<%= template.template_key %>/reset-default" method="POST" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to reset this template to its default content? This action cannot be undone.');">
                        <button type="submit" class="btn btn-outline-warning mr-2">
                            <i class="fas fa-undo"></i> Reset to Default
                        </button>
                    </form>
                    -->
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save mr-1"></i> Save Changes
                    </button>
                <% } else { %>
                     <button type="submit" class="btn btn-success" disabled>
                        <i class="fas fa-save mr-1"></i> Save Changes (Disabled)
                    </button>
                <% } %>
            </div>
        </form>
    </div>
</div>

<%- contentFor('pageStyles') %>
<style>
    #body_html_template, #body_text_template {
        font-family: monospace; /* Easier to edit templates with monospace font */
        min-height: 200px;
    }
</style>