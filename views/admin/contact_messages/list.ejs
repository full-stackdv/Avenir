
<% /* views/admin/contact_messages/list.ejs */ %>
<div class="container-fluid mt-4">
    <%- include('../../partials/_messages') %>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><%= pageTitle %> (<%= totalMessages %>)</h2>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <form method="GET" action="/admin/contact-messages" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="filter" class="form-label">Filter Messages</label>
                    <select id="filter" name="filter" class="form-select form-select-sm">
                        <option value="all" <%= currentFilter === 'all' ? 'selected' : '' %>>All Messages</option>
                        <option value="unread" <%= currentFilter === 'unread' ? 'selected' : '' %>>Unread Only</option>
                        <option value="read" <%= currentFilter === 'read' ? 'selected' : '' %>>Read Only</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary btn-sm w-100"><i class="fas fa-filter"></i> Filter</button>
                </div>
            </form>
        </div>
    </div>

    <% if (messages && messages.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover table-bordered table-sm">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>From</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Received</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% messages.forEach(message => { %>
                        <tr class="<%= !message.is_read ? 'fw-bold' : '' %>">
                            <td><%= message.id %></td>
                            <td><%= message.name %></td>
                            <td><a href="mailto:<%= message.email %>"><%= message.email %></a></td>
                            <td><%= message.subject %></td>
                            <td><%= message.received_at %></td>
                            <td>
                                <% if (message.is_read) { %>
                                    <span class="badge bg-secondary">Read</span>
                                <% } else { %>
                                    <span class="badge bg-primary">Unread</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/admin/contact-messages/<%= message.id %>" class="btn btn-outline-info btn-sm" title="View Message">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <form action="/admin/contact-messages/<%= message.id %>/delete" method="POST" class="d-inline ms-1" onsubmit="return confirm('Are you sure you want to delete this message? This action cannot be undone.');">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete Message">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <%# Pagination %>
        <% if (totalPages > 1) { %>
            <nav aria-label="Message pagination">
                <ul class="pagination pagination-sm justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item"><a class="page-link" href="?page=<%= currentPage - 1 %>&filter=<%= currentFilter %>">Previous</a></li>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>&filter=<%= currentFilter %>"><%= i %></a>
                        </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>&filter=<%= currentFilter %>">Next</a></li>
                    <% } %>
                </ul>
            </nav>
        <% } %>

    <% } else { %>
        <div class="alert alert-info text-center">No contact messages found matching your criteria.</div>
    <% } %>
</div>
 