<% /* views/admin/users/change_password_for_user.ejs */ %>
<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Admin Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/admin/users">User Management</a></li>
            <li class="breadcrumb-item active" aria-current="page">Change Password for <%= userToEdit.username %></li>
        </ol>
    </nav>

    <h2><%= pageTitle %></h2>

    <%- include('../../partials/_messages', { errors: errors }) %>

    <div class="card shadow-sm">
        <div class="card-body">
            <form action="/admin/users/<%= userToEdit.id %>/change-password" method="POST">
                <div class="mb-3">
                    <label for="new_password" class="form-label">New Password</label>
                    <input type="password" class="form-control <%= errors.find(e => e.msg.toLowerCase().includes('password') || e.msg.toLowerCase().includes('match')) ? 'is-invalid' : '' %>" 
                           id="new_password" name="new_password" required>
                </div>
                <div class="mb-3">
                    <label for="confirm_new_password" class="form-label">Confirm New Password</label>
                    <input type="password" class="form-control <%= errors.find(e => e.msg.toLowerCase().includes('password') || e.msg.toLowerCase().includes('match')) ? 'is-invalid' : '' %>" 
                           id="confirm_new_password" name="confirm_new_password" required>
                </div>
                <% errors.forEach(function(error) { %>
                    <div class="text-danger small mb-2"><%= error.msg %></div>
                <% }); %>
                <button type="submit" class="btn btn-primary"><i class="fas fa-key"></i> Set New Password</button>
                <a href="/admin/users" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>