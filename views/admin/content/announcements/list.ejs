<%# views/admin/content/announcements/list.ejs %>
<div class="container-fluid mt-4">
    <%- include('../../../partials/_messages') %>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0"><i class="fas fa-bullhorn mr-2"></i>Manage Announcements (<%= totalAnnouncements %>)</h4>
            <a href="/admin/content/announcements/create" class="btn btn-light btn-sm">
                <i class="fas fa-plus-circle mr-1"></i> Create New Announcement
            </a>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <strong class="mr-2">Filter by Status:</strong>
                <a href="?filter=all" class="btn btn-sm <%= currentFilter === 'all' ? 'btn-primary' : 'btn-outline-primary' %>">All</a>
                <a href="?filter=active" class="btn btn-sm <%= currentFilter === 'active' ? 'btn-success' : 'btn-outline-success' %>">Active</a>
                <a href="?filter=inactive" class="btn btn-sm <%= currentFilter === 'inactive' ? 'btn-secondary' : 'btn-outline-secondary' %>">Inactive</a>
            </div>

            <% if (announcements && announcements.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Created By</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% announcements.forEach(ann => { %>
                                <tr>
                                    <td><%= ann.title %></td>
                                    <td>
                                        <span class="badge badge-<%= ann.type || 'info' %>">
                                            <%= (ann.type || 'info').charAt(0).toUpperCase() + (ann.type || 'info').slice(1) %>
                                        </span>
                                    </td>
                                    <td>
                                        <% if (ann.is_active) { %>
                                            <span class="badge badge-success">Active</span>
                                        <% } else { %>
                                            <span class="badge badge-secondary">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td><%= ann.start_date ? new Date(ann.start_date).toLocaleDateString() : 'N/A' %></td>
                                    <td><%= ann.end_date ? new Date(ann.end_date).toLocaleDateString() : 'N/A' %></td>
                                    <td><%= ann.created_by_username || 'System' %></td>
                                    <td><%= new Date(ann.created_at).toLocaleDateString() %></td>
                                    <td>
                                        <a href="/admin/content/announcements/<%= ann.id %>/edit" class="btn btn-warning btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="/admin/content/announcements/<%= ann.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                                            <button type="submit" class="btn btn-danger btn-sm" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                        <form action="/admin/content/announcements/<%= ann.id %>/toggle-active" method="POST" style="display: inline;">
                                            <button type="submit" class="btn btn-<%= ann.is_active ? 'secondary' : 'success' %> btn-sm" title="<%= ann.is_active ? 'Deactivate' : 'Activate' %>">
                                                <i class="fas fa-<%= ann.is_active ? 'toggle-off' : 'toggle-on' %>"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>

                <%# Pagination %>
                <% if (totalPages > 1) { %>
                    <nav aria-label="Announcements pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>&filter=<%= currentFilter %>">Previous</a>
                            </li>
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&filter=<%= currentFilter %>"><%= i %></a>
                                </li>
                            <% } %>
                            <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>&filter=<%= currentFilter %>">Next</a>
                            </li>
                        </ul>
                    </nav>
                <% } %>

            <% } else { %>
                <div class="alert alert-info text-center">
                    No announcements found matching the current filter.
                    <% if (currentFilter !== 'all') { %>
                        Try viewing <a href="?filter=all">all announcements</a>.
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>