
<div class="row justify-content-center">
    <div class="col-md-7 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                 <h4 class="mb-0"><i class="fas fa-key me-2"></i><%= pageTitle %></h4>
            </div>
            <div class="card-body">
                <%- include('../partials/_messages', { errors: errors }) %>

                <form action="/profile/change-password" method="POST">
                    <div class="mb-3">
                        <label for="current_password" class="form-label">Current Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control <%= (errors && errors.find(e => e.param === 'current_password' || e.msg.toLowerCase().includes('current password'))) ? 'is-invalid' : '' %>" id="current_password" name="current_password" required>
                        <% if (errors && errors.find(e => e.param === 'current_password' || e.msg.toLowerCase().includes('current password'))) { %>
                            <div class="invalid-feedback"><%= errors.find(e => e.param === 'current_password' || e.msg.toLowerCase().includes('current password')).msg %></div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="new_password" class="form-label">New Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control <%= (errors && errors.find(e => e.param === 'new_password' || e.msg.toLowerCase().includes('new password must be'))) ? 'is-invalid' : '' %>" id="new_password" name="new_password" required>
                        <small class="form-text text-muted">Must be at least 6 characters long.</small>
                        <% if (errors && errors.find(e => e.param === 'new_password' || e.msg.toLowerCase().includes('new password must be'))) { %>
                            <div class="invalid-feedback"><%= errors.find(e => e.param === 'new_password' || e.msg.toLowerCase().includes('new password must be')).msg %></div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="confirm_new_password" class="form-label">Confirm New Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control <%= (errors && errors.find(e => e.param === 'confirm_new_password' || e.msg.toLowerCase().includes('passwords do not match'))) ? 'is-invalid' : '' %>" id="confirm_new_password" name="confirm_new_password" required>
                         <% if (errors && errors.find(e => e.param === 'confirm_new_password' || e.msg.toLowerCase().includes('passwords do not match'))) { %>
                            <div class="invalid-feedback"><%= errors.find(e => e.param === 'confirm_new_password' || e.msg.toLowerCase().includes('passwords do not match')).msg %></div>
                        <% } %>
                    </div>

                    <hr>
                    <button type="submit" class="btn btn-warning"><i class="fas fa-lock me-1"></i> Update Password</button>
                    <a href="/profile" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>