
<header class="gallery-hero">
    <div class="container">
        <h1 class="display-4" style="color: rgb(2, 5, 14)">Project Gallery</h1>
        <p class="lead">Showcasing our commitment to quality, innovation, and excellence in construction.</p>
    </div>
</header>

<section class="project-gallery py-5">
    <div class="container">
        <div class="gallery-filter mb-4">
            <button class="btn btn-outline-primary active" data-filter="all">All Projects</button>
            <button class="btn btn-outline-primary" data-filter="commercial">Commercial</button>
            <button class="btn btn-outline-primary" data-filter="residential">Residential</button>
            <button class="btn btn-outline-primary" data-filter="infrastructure">Infrastructure</button>
            <button class="btn btn-outline-primary" data-filter="water">Water Projects</button>
            <!-- Add more categories as needed -->
        </div>
      
        <div class="gallery-grid">
            <%# Example Project Items - These should ideally come from a database/CMS %>
            <% const projects = [
                { img: '/images/project1.jpg', title: 'Modern Office Complex', category: 'commercial', desc: 'A state-of-the-art office space in Addis Ababa.' },
                { img: '/images/project2.jpg', title: 'Luxury Apartment Tower', category: 'residential', desc: 'High-end living with premium amenities in Jimma.' },
                { img: '/images/project3.jpg', title: 'City Bypass Bridge', category: 'infrastructure', desc: 'Connecting communities with robust infrastructure.' },
                { img: '/images/project4.jpg', title: 'Rural Irrigation System', category: 'water', desc: 'Sustainable water solutions for agricultural growth.' },
                { img: '/images/project-commercial-2.jpg', title: 'Retail Shopping Center', category: 'commercial', desc: 'A vibrant hub for shopping and entertainment.' },
                { img: '/images/project-residential-2.jpg', title: 'Gated Community Villas', category: 'residential', desc: 'Exclusive family homes with modern designs.' }
            ]; %>

            <% projects.forEach(project => { %>
            <div class="project-item" data-category="<%= project.category %>">
                <a href="#" data-bs-toggle="modal" data-bs-target="#projectModal" 
                   data-project-title="<%= project.title %>" 
                   data-project-image="<%= project.img %>" 
                   data-project-desc="<%= project.desc %>"
                   data-project-category="<%= project.category.charAt(0).toUpperCase() + project.category.slice(1) %>">
                    <img src="<%= project.img %>" alt="<%= project.title %>" class="img-fluid">
                    <div class="project-item-overlay">
                        <div class="project-item-text">
                            <h5 class="mb-0"><%= project.title %></h5>
                            <small class="text-warning"><%= project.category.charAt(0).toUpperCase() + project.category.slice(1) %></small>
                        </div>
                    </div>
                </a>
            </div>
            <% }); %>
        </div>
    </div>
</section>

<!-- Project Detail Modal -->
<div class="modal fade" id="projectModal" tabindex="-1" aria-labelledby="projectModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="projectModalLabel">Project Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <img src="" id="modalProjectImage" class="img-fluid mb-3" alt="Project Image">
        <h3 id="modalProjectTitle"></h3>
        <p class="text-muted"><strong id="modalProjectCategory"></strong></p>
        <p id="modalProjectDesc"></p>
        <!-- Add more project details here if available -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
// JavaScript for Project Modal in gallery.ejs
document.addEventListener('DOMContentLoaded', function () {
    var projectModal = document.getElementById('projectModal');
    if (projectModal) {
        projectModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget; // Button that triggered the modal
            var title = button.getAttribute('data-project-title');
            var image = button.getAttribute('data-project-image');
            var desc = button.getAttribute('data-project-desc');
            var category = button.getAttribute('data-project-category');

            var modalTitle = projectModal.querySelector('.modal-title');
            var modalImage = projectModal.querySelector('#modalProjectImage');
            var modalProjectTitle = projectModal.querySelector('#modalProjectTitle');
            var modalProjectCategory = projectModal.querySelector('#modalProjectCategory');
            var modalProjectDesc = projectModal.querySelector('#modalProjectDesc');

            modalTitle.textContent = title;
            modalImage.src = image;
            modalImage.alt = title;
            modalProjectTitle.textContent = title;
            modalProjectCategory.textContent = category;
            modalProjectDesc.textContent = desc;
        });
    }
});
</script>

