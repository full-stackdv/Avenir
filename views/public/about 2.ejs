
<header class="about-hero">
    <div class="container">
        <h1 class="display-4" style="color:aliceblue">About Avenir Construction</h1>
        <p class="lead">Building on a Foundation of Excellence and Integrity.</p>
    </div>
</header>

<section class="about-section py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <img src="/images/company-milestone.jpg" alt="Avenir Construction at Work" class="img-fluid rounded shadow-lg">
            </div>
            <div class="col-lg-6">
                <h3>Our Story</h3>
                <p><%= getSetting('aboutOurStory', 'Avenir Construction was established in 2017 in Jimma, Oromia, Ethiopia, with a vision to transform the construction landscape. From humble beginnings, we\'ve grown into a respected company, driven by a passion for quality, innovation, and client satisfaction. We\'ve tackled diverse projects, from residential buildings to complex infrastructure, always striving to deliver exceptional results.') %></p>
            </div>
        </div>
    </div>
</section>

<section class="about-section bg-light py-5 mission-vision">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-4 mb-md-0">
                <h3><i class="fas fa-bullseye me-2 text-primary"></i>Our Mission</h3>
                <p><%= getSetting('companyMission', 'To provide exceptional construction services that meet the needs of our clients, while contributing to the development of our communities. We are committed to delivering projects on time, within budget, and to the highest quality standards, fostering lasting relationships with our clients and partners.') %></p>
            </div>
            <div class="col-md-6">
                <h3><i class="fas fa-eye me-2 text-primary"></i>Our Vision</h3>
                <p><%= getSetting('companyVision', 'To be the leading construction company in Ethiopia, renowned for excellence and sustainability. We aspire to set new standards in the industry, contributing to the nation\'s development through innovative and responsible construction practices.') %></p>
            </div>
        </div>
    </div>
</section>

<section class="about-section py-5 core-values">
    <div class="container">
        <h2 class="text-center mb-5">Our Core Values</h2>
        <div class="row text-center">
            <% const values = getSetting('coreValuesList', 'Integrity,Innovation,Quality,Customer Satisfaction,Safety,Sustainability').split(','); %>
            <% values.forEach(value => { %>
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                             <% let iconClass = 'fa-star'; /* Default icon */
                                if (value.toLowerCase().includes('integrity')) iconClass = 'fa-shield-alt';
                                if (value.toLowerCase().includes('innovation')) iconClass = 'fa-lightbulb';
                                if (value.toLowerCase().includes('quality')) iconClass = 'fa-award';
                                if (value.toLowerCase().includes('customer') || value.toLowerCase().includes('client')) iconClass = 'fa-handshake';
                                if (value.toLowerCase().includes('safety')) iconClass = 'fa-hard-hat';
                                if (value.toLowerCase().includes('sustainability')) iconClass = 'fa-leaf';
                            %>
                            <i class="fas <%= iconClass %> fa-3x text-primary mb-3"></i>
                            <h5 class="card-title"><%= value.trim() %></h5>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>

