@media (max-width: 768px) {
  .container {
    width: 95%;
    padding: 15px;
  }
  
  header h1 {
    font-size: 2rem;
  }
  
  .gallery-hero h2 {
    font-size: 2rem;
  }
  
  .gallery-grid {
    grid-template-columns: 1fr;
  }
  
  .gallery-filter button {
    margin: 0 5px;
  }
}
  </style>