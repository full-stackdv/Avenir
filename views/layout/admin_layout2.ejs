<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Admin - Avenircon' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"> <!-- Updated Font Awesome version -->
    <link rel="stylesheet" href="/css/admin_styles.css">
</head>
<body>
    <%- include('../partials/_admin_navbar') %>
    
    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/_admin_sidebar') %>
            <!-- views/layouts/admin_layout.ejs -->
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-main-content">
                <% if (typeof isAdminPreview !== 'undefined' && isAdminPreview) { %>
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-eye me-2"></i>
                        <strong>Admin Preview Mode.</strong> This is how the post will look to the public.
                        <a href="/admin/posts/<%= post.id %>/edit" class="alert-link ms-2">Return to Edit</a>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><%= typeof pageTitle !== 'undefined' ? pageTitle : (typeof title !== 'undefined' ? title : 'Admin Dashboard') %></h1>
                </div>
                <%- include('../partials/_messages') %>
                <%- body %>
            </main>
            
            <!--
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><%= typeof pageTitle !== 'undefined' ? pageTitle : (typeof title !== 'undefined' ? title : 'Admin Dashboard') %></h1>
                </div>
                <%- include('../partials/_messages') %>
                <%- body %>
            </main>
            -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin_script.js"></script>
</body>
</html>