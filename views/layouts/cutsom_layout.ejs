 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= (typeof title !== 'undefined' ? title : 'AvenirCon App') %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Custom App Styles (staff.css will be specific to staff/idcard module) -->
           <link rel="stylesheet" href="/css/styles.css">

    <link rel="stylesheet" href="/css/admin_styles.css"> <!-- Main admin styles for navbar/sidebar consistency -->
    <link rel="stylesheet" href="/css/staff_styles.css"> <!-- Specific to staff/idcard generator if this layout is for it -->
      <link rel="stylesheet" href="/css/main_styles.css">

    <!-- Add other global custom styles if needed -->


    <% if (typeof pageStyles !== 'undefined' && pageStyles.length > 0) { %>
        <% pageStyles.forEach(function(style) { %>
            <link rel="stylesheet" href="<%= style %>">
        <% }); %>
    <% } %>
</head>
<body class="bg-light">

    <%- include('../partials/_admin_navbar') %>

    <div class="container-fluid">
        <div class="row" style="height: 0lvh;"> 
            <p></p>
        </div>
        <div class="row">
            <%- include('../partials/_admin_sidebar') %>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <!-- Main Content Area for Custom Layout -->
                <%- body %>
            </main>
        </div>
    </div>

    <!-- Bootstrap JS Bundle (Popper.js and Bootstrap JS) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!-- Custom Page-Specific Scripts -->
    <% if (typeof pageScripts !== 'undefined' && pageScripts.length > 0) { %>
        <% pageScripts.forEach(function(script) { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html>