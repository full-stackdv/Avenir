<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="AvenirConPro Admin Panel" />
    <title><%= typeof title !== 'undefined' ? title : 'Admin - AvenirConPro' %></title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Global Styles (shared across layouts if needed) -->
    <link href="/css/styles.css" rel="stylesheet" />

    <!-- Admin Specific Styles -->
    <link href="/css/admin_styles.css" rel="stylesheet" />
    
    <!-- Page-specific stylesheets passed from controller -->
    <% if (typeof pageStylesheets !== 'undefined' && Array.isArray(pageStylesheets)) { %>
      <% pageStylesheets.forEach(function(style) { %>
        <link rel="stylesheet" href="<%= style %>">
      <% }); %>
    <% } %>
    <style>
        /* Basic layout styling - can be moved to admin_styles.css */
        body.admin-body { padding-top: 56px; /* Height of fixed navbar */ }
        .admin-sidebar-main {
            position: fixed;
            top: 56px; /* Navbar height */
            bottom: 0;
            left: 0;
            z-index: 1000; /* Ensure it's above content but behind modals if any */
            padding: 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            background-color: #f8f9fa; /* Light background for sidebar */
        }
        .sidebar-sticky-content {
            position: relative;
            top: 0;
            height: calc(100vh - 56px); /* Full height minus navbar */
            padding-top: .5rem;
            overflow-x: hidden;
            overflow-y: auto; /* Scrollable sidebar content */
        }
        .admin-main-content { 
            padding: 20px; 
        }
        @media (min-width: 768px) { /* md breakpoint */
            .admin-main-content { margin-left: 220px; /* Default width of col-md-3/col-lg-2 sidebar */ }
        }
        /* The sidebar collapse JS is handled by Bootstrap via data-bs-target="#adminSidebar" */
    </style>
</head>
<body class="admin-body">
    
    <%- include('../partials/_admin_navbar') %>

    <div class="container-fluid">
        <div class="row">
            <%- include('../partials/_admin_sidebar') %>
            
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 admin-main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom page-title-header">
                    <h1 class="h2"><%- (typeof pageTitle !== 'undefined' && pageTitle) ? pageTitle : "Admin Dashboard" %></h1>
                    <% if (typeof breadcrumbs !== 'undefined' && Array.isArray(breadcrumbs) && breadcrumbs.length > 0) { %>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb bg-transparent p-0 m-0">
                                <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                                <% breadcrumbs.forEach(function(crumb, index) { %>
                                    <% if (index === breadcrumbs.length - 1) { %>
                                        <li class="breadcrumb-item active" aria-current="page"><%= crumb.name %></li>
                                    <% } else { %>
                                        <li class="breadcrumb-item"><a href="<%= crumb.link %>"><%= crumb.name %></a></li>
                                    <% } %>
                                <% }); %>
                            </ol>
                        </nav>
                    <% } %>
                </div>

                <%- include('../partials/_messages') %>
                
                <%- body %>
            </main>
        </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin_script.js"></script> <!-- Admin specific scripts -->

    <!-- Page-specific scripts passed from controller -->
    <% if (typeof pageScripts !== 'undefined' && Array.isArray(pageScripts)) { %>
      <% pageScripts.forEach(function(script) { %>
        <script src="<%= script %>"></script>
      <% }); %>
    <% } %>
    
<script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>

</body>
</html>


