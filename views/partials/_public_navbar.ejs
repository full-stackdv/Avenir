          <li class="nav-item">
            <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath === '/login') ? 'active' : '' %>" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a href="/register" class="btn btn-outline-light btn-sm ms-lg-2 <%= (typeof currentPath !== 'undefined' && currentPath === '/register') ? 'active' : '' %>">Register</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>