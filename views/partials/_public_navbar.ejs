    </button>
    <div class="collapse navbar-collapse" id="publicNavbar">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
        <li class="nav-item">
          <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath === '/') ? 'active' : '' %>" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath === '/about') ? 'active' : '' %>" href="/about">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (typeof currentPath !== 'undefined' && (currentPath === '/blog' || currentPath.startsWith('/blog/'))) ? 'active' : '' %>" href="/blog">Blog</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (typeof currentPath !== 'undefined' && (currentPath === '/blog' || currentPath.startsWith('/gallery/'))) ? 'active' : '' %>" href="/gallery">Gallery</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= (typeof currentPath !== 'undefined' && currentPath === '/contact') ? 'active' : '' %>" href="/contact">Contact</a>
        </li>
        <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdownPublic" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-user me-1"></i> <%= (currentUser && currentUser.username) ? currentUser.username : 'User' %>
