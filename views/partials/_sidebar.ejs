<% if (user) { %>
<div class="sidebar">
    <div class="sidebar-brand">
        <i class="fas fa-hard-hat"></i> BuildTrack
    </div>
    <nav class="sidebar-nav">
        <div class="nav-item <%= currentSection === 'dashboard' ? 'active' : '' %>">
            <a href="/dashboard" class="nav-link">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
        </div>
        <div class="nav-item <%= currentSection === 'projects' ? 'active' : '' %>">
            <a href="/projects" class="nav-link">
                <i class="fas fa-project-diagram"></i> Projects
            </a>
        </div>
        <div class="nav-item <%= currentSection === 'reports' ? 'active' : '' %>">
            <a href="/reports" class="nav-link">
                <i class="fas fa-chart-bar"></i> Reports
            </a>
        </div>
        <% if (user.role === 'admin') { %>
        <div class="nav-item <%= currentSection === 'admin' ? 'active' : '' %>">
            <a href="/admin/dashboard" class="nav-link">
                <i class="fas fa-cog"></i> Admin
            </a>
        </div>
        <% } %>
    </nav>
    <button class="sidebar-toggle">
        <i class="fas fa-chevron-left"></i>
    </button>
</div>
<% } %>