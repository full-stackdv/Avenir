<%# views/partials/_aside_sidebar.ejs %>
<aside class="col-lg-3 col-md-4 public-aside-sidebar mt-4 mt-md-0">
    <%# Example: Search Widget %>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-search me-2"></i>Search Blog</h5>
        </div>
        <div class="card-body">
            <form action="/blog/search" method="GET">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search articles..." aria-label="Search articles">
                    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>

    <%# Example: Recent Posts Widget (Data would need to be passed to the view) %>
    <% if (typeof recentPosts !== 'undefined' && recentPosts.length > 0) { %>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-history me-2"></i>Recent Posts</h5>
        </div>
        <ul class="list-group list-group-flush">
            <% recentPosts.slice(0, 5).forEach(function(rPost) { %>
                <li class="list-group-item">
                    <a href="/blog/<%= rPost.slug %>" class="text-decoration-none d-block text-truncate"><%= rPost.title %></a>
                    <small class="text-muted d-block"><%= new Date(rPost.published_at).toLocaleDateString() %></small>
                </li>
            <% }); %>
        </ul>
    </div>
    <% } %>

    <%# Example: Categories/Tags Widget (Data would need to be passed) %>
    <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-tags me-2"></i>Categories</h5>
        </div>
        <div class="card-body">
            <% categories.forEach(function(category) { %>
                <a href="/blog/category/<%= category.slug %>" class="btn btn-sm btn-outline-secondary me-1 mb-1"><%= category.name %></a>
            <% }); %>
        </div>
    </div>
    <% } %>

    <!-- You can add more widgets like "About Us Snippet", "Follow Us", etc. -->
</aside>

 